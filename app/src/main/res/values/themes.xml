<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommApp" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="android:fitsSystemWindows">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tomato</item>
        <item name="colorPrimaryVariant">@color/tomato</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">#00000000</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/menu_item_color_state</item>
        <item name="itemTextColor">@color/menu_item_color_state </item>
        <item name="itemBackground">@drawable/menu_background_color_state</item>

    </style>

    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFEB3B</item>
    </style>



</resources>